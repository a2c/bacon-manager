{% extends 'BaconCoreBundle::layout.html.twig' %}

{% block body %}
    <section class="content-header">
        <h1>
            404 {{ 'Página não encontrada'|trans }}
        </h1>
    </section>
    <section class="content">
        <div class="error-page">
            <h2 class="headline text-yellow">404</h2>

            <div class="error-content">
                <h3><i class="fa fa-warning text-yellow"></i> Oops! {{ 'Página não encontrada'|trans }}.</h3>

                <p>
                    {{ 'Não foi possível encontrar a página que você estava procurando'|trans }}.
                    <a href="{{ path('manager_site') }}">{{ 'Retorne para a página inicial'|trans }}</a>
                </p>

            </div>
            <!-- /.error-content -->
        </div>
    </section>
{% endblock %}
