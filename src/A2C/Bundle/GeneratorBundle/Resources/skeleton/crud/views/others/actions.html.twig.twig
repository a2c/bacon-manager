                {%- for action in record_actions %}

                        {%- if action == 'show'  %}

                                        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_" ~ action ~ "', { 'id': entity."~ identifier ~" }) }}" }}" class="btn btn-sm btn-default" data-original-title="{{ "{{ 'Show'|trans }}" }}">
                                            <span class="glyphicon glyphicon-eye-open"></span>
                                        </a>

                        {%- endif  %}

                        {%- if action == 'edit' %}

                                        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_" ~ action ~ "', { 'id': entity."~ identifier ~" }) }}" }}" class="btn btn-sm btn-default" data-original-title="{{ "{{ 'Edit'|trans }}" }}">
                                            <span class="glyphicon glyphicon-pencil"></span>
                                        </a>

                        {%- endif  %}

                        {%- if action == 'delete' %}

                                        <form class="form-delete-inline" action="{{ "{{ path('" ~ route_name_prefix ~ "_" ~ action ~ "', { 'id': entity."~ identifier ~" }) }}" }}" method="post">
                                            <button type="submit" class="btn btn-sm btn-danger" title="" data-target="#modalDelete" data-toggle="modal" data-original-title="{{ "{{ 'Remove'|trans }}" }}">
                                                <span class="glyphicon glyphicon-remove"></span>
                                            </button>
                                        </form>

                        {%- endif  %}

                {%- endfor %}