{% extends "BaconUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <div class="register-box-body">
        <p class="login-box-msg">{{ 'Forgot my password'|trans }}</p>

        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            {{ 'Sua senha foi alterada com succeso!'|trans }} <br/>
            {{ 'Clique no botão abaixo para acessar o Manager'|trans }} !
        </div>
        <p>
            <a href="{{ url(route_admin) }}" class="btn btn-primary">{{ 'Admin'|trans }}</a>

        </p>
    </div>
{% endblock body %}
